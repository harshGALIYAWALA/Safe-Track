<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".activity.register_screen"
        android:orientation="vertical"
        android:clipChildren="false"
        android:clipToPadding="false">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/vector"
            android:scaleType="centerCrop"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register your"
                android:textSize="24dp"
                android:textStyle="bold"
                android:fontFamily="@font/baloo2_bold"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Safe Track!"
                android:textSize="30dp"
                android:textStyle="bold"
                android:fontFamily="@font/baloo2_bold"
                android:textColor="@color/mainColor"
                android:paddingTop="20dp"
                android:layout_gravity="center_horizontal"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <EditText
                android:id="@+id/fNameID"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="First Name"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="7dp"
                android:ems="10"
                android:inputType="text"
                android:background="@drawable/edit_text_boarder"
                android:paddingStart="10dp"
                android:fontFamily="@font/baloo2_bold"
                android:imeOptions="actionNext"
                android:maxLength="10"
                android:elevation="10dp"/>

            <EditText
                android:id="@+id/lNameID"
                android:layout_width="175dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="Last Name"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="15dp"
                android:ems="10"
                android:inputType="text"
                android:background="@drawable/edit_text_boarder"
                android:paddingStart="10dp"
                android:fontFamily="@font/baloo2_bold"
                android:imeOptions="actionNext"
                android:maxLength="10"
                android:elevation="10dp"/>
        </LinearLayout>

        <EditText
            android:id="@+id/emailID"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Email"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:background="@drawable/edit_text_boarder"
            android:paddingStart="10dp"
            android:fontFamily="@font/baloo2_bold"
            android:layout_marginTop="18dp"
            android:imeOptions="actionNext"
            android:elevation="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/edit_text_boarder">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:hint="+91"
                android:textSize="20sp"
                android:gravity="center"
                android:fontFamily="@font/baloo2_bold"
                android:paddingStart="10dp"
                android:paddingRight="10dp"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <EditText
                android:id="@+id/numberID"
                android:layout_width="170dp"
                android:layout_height="28dp"
                android:fontFamily="@font/baloo2_bold"
                android:paddingStart="10dp"
                android:background="#FFECEC"
                android:hint="Phone Number"
                android:inputType="number"
                android:maxLength="10"
                android:imeOptions="actionNext"/>
        </LinearLayout>

        <EditText
            android:id="@+id/password_toggle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Password"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:ems="10"
            android:inputType="textVisiblePassword"
            android:background="@drawable/edit_text_boarder"
            android:paddingStart="10dp"
            android:fontFamily="@font/baloo2_bold"
            android:layout_marginTop="18dp"
            android:imeOptions="actionNext"
            android:elevation="10dp"/>

        <EditText
            android:id="@+id/confirmPasswordID"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Confirm Password"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:ems="10"
            android:inputType="textPassword"
            android:background="@drawable/edit_text_boarder"
            android:paddingStart="10dp"
            android:fontFamily="@font/baloo2_bold"
            android:layout_marginTop="18dp"
            android:imeOptions="actionNext"/>

        <Spinner
            android:id="@+id/genderSpinner"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/edit_text_boarder"
            android:prompt="@string/select_gender"
            android:elevation="10dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="By Clicking Register I agree with"
                android:gravity="center"
                android:fontFamily="@font/baloo2_bold"
                android:textSize="10dp"/>

            <TextView
                android:id="@+id/termAndCondition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Terms &amp; Condition"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:fontFamily="@font/baloo2_bold"
                android:textSize="10dp"
                android:textColor="@color/mainColor"/>
        </FrameLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/registerbtn"
            android:layout_width="255dp"
            android:layout_height="50dp"
            android:text="Register"
            android:background="@drawable/shadow_button"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:fontFamily="@font/baloo2_bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:elevation="100dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="or sign-in with"
            android:fontFamily="@font/baloo2_bold"
            android:gravity="center"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/google_img"
                android:layout_marginRight="10dp"
                android:elevation="10dp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/facebook_img"
                android:layout_marginLeft="10dp"
                android:elevation="10dp"/>

        </LinearLayout>


        <TextView
            android:id="@+id/direactToLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already have an Account? "
            android:layout_marginTop="10dp"
            android:fontFamily="@font/baloo2_bold"
            android:textColor="@color/mainColor"
            android:gravity="center_horizontal"/>

    </LinearLayout>
</ScrollView>
