<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_width="65dp"
                android:layout_height="65dp"
                app:cardCornerRadius="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp">
                <ImageView
                    android:id="@+id/imageContactitem"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/baseline_person_24"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="20dp">
                <TextView
                    android:id="@+id/nameContactItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Harsh galiyawala"
                    android:fontFamily="@font/baloo2_bold"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:id="@+id/numberContactItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="9106333100"
                    android:fontFamily="@font/baloo2_bold"
                    android:textSize="17sp"
                    android:inputType="number"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/deleteContactItem"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/delete_icon"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:fontFamily="@font/baloo2_medium"
                    android:textSize="17sp"
                    android:gravity="center_horizontal"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>